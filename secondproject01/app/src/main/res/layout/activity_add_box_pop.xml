<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_box_pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cs496.secondproject01.AddBoxPop">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로운 추억"
        android:id="@+id/add_msg"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="게임"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox7"
        android:layout_below="@+id/checkBox6"
        android:layout_alignRight="@+id/complete"
        android:layout_alignEnd="@+id/complete" />

    <CheckBox
        android:text="영화"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox6"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox7"
        android:layout_alignStart="@+id/checkBox7" />

    <CheckBox
        android:text="운동"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:layout_above="@+id/checkBox6"
        android:layout_alignLeft="@+id/checkBox6"
        android:layout_alignStart="@+id/checkBox6" />

    <CheckBox
        android:text="여행"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox8"
        android:layout_alignLeft="@+id/checkBox5"
        android:layout_alignStart="@+id/checkBox5"
        android:layout_below="@+id/checkBox7" />

    <CheckBox
        android:text="식사"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:layout_below="@+id/checkBox4"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:text="커피/차"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <CheckBox
        android:text="공부"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"

        android:layout_below="@+id/checkBox"
        android:layout_alignLeft="@+id/with"
        android:layout_alignStart="@+id/with" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="함께한 소중한 사람은 누구였나요?"
        android:layout_marginTop="20dp"
        android:textSize="14dp"
        android:id="@+id/with"
        android:layout_below="@+id/select_photos"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="함께 무슨 활동을 하였나요?"
        android:layout_marginTop="55dp"
        android:id="@+id/action"
        android:textSize="14dp"
        android:layout_below="@+id/with"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:text="업무"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/action"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2" />

    <Button
        android:text="상자에 추가하기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/complete"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CalendarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/complete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="373dp"
        android:layout_marginStart="373dp"
        android:id="@+id/calendarView2" />

    <Button
        android:text="사진 선택"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_photos"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/add_msg"
        android:layout_alignLeft="@+id/with"
        android:layout_alignStart="@+id/with" />

    <Button
        android:text="날짜 선택"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_alignBaseline="@+id/select_photos"
        android:layout_alignBottom="@+id/select_photos"
        android:layout_alignRight="@+id/with"
        android:layout_alignEnd="@+id/with" />

    <MultiAutoCompleteTextView
        android:hint="FRIENDS 목록에 있는 친구 이름을 입력하세요 (쉼표로 구분)"
        android:textColorHint="#60ee0000"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:id="@+id/with_input"
        android:layout_below="@+id/with"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
